<div class={{styles.profile--container}}>
    <div class={{styles.profile}}>
        <div class={{styles.profile__icon}}>
            <img src="/profile__icon.svg" alt="Фото профиля" class={{styles.profile__icon__img}} />
        </div>
        <h2 class={{styles.profile--name}}>Имя</h2>
    </div>

    <div class={{styles.profile--info}}>
        {{> ProfileInfo name="Почта" info="pochta@yandex.ru"}}
        {{> ProfileInfo name="Логин" info="ivanivanov"}}
        {{> ProfileInfo name="Имя" info="Иван"}}
        {{> ProfileInfo name="Фамилия" info="Иванов"}}
        {{> ProfileInfo name="Имя в чате" info="Иван"}}
        {{> ProfileInfo name="Телефон" info="+7 (909) 967 30 30" last=true}}
    </div>

    <div class={{styles.profile--settings}}>
        {{> ProfileSetting data="Изменить данные"}}
        {{> ProfileSetting data="Изменить пароль"}}
        {{> ProfileSetting data="Выйти" last=true}}
    </div>
</div>

<div class={{styles.profile--back}}>
    <button class={{styles.profile--back__btn}}>
        <svg width="28.000000" height="28.000000" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink">
            <circle id="Ellipse 36" r="14.000000" transform="matrix(-1 -1.22465e-16 1.22465e-16 -1 14 14)"
                fill="#3369F3" fill-opacity="1.000000" />
            <rect id="Rectangle 447" x="20.000000" y="14.800049" width="11.000000" height="1.600000"
                transform="rotate(180 20.000000 14.800049)" fill="#FFFFFF" fill-opacity="1.000000" />
            <path id="Vector 1" d="M13 19L9 14L13 9" stroke="#FFFFFF" stroke-opacity="1.000000"
                stroke-width="1.600000" />
        </svg>
    </button>
</div>